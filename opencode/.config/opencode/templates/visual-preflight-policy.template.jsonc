{
  "version": 1,
  "checks": {
    "color": {
      "wcagAA": {
        "normalText": "4.5:1",
        "largeText": "3:1",
        "nonTextUI": "3:1"
      },
      "apca": {
        "policy": "warn",
        "preferredBodyLc": 75,
        "minimumUiLc": 60,
        "largeTextLc": 45
      }
    },
    "shapeAndLayout": {
      "gestaltGrouping": true,
      "responsiveGroupingAudit": true,
      "primaryActionDiscoverability": true,
      "focusPathDeclared": true
    },
    "brandCompliance": {
      "required": true,
      "allowPartialWithRiskAcceptance": true
    },
    "runtime": {
      "nextRootSanity": true,
      "tailwindResolve": true,
      "lint": true,
      "build": true,
      "devSmoke": true,
      "blockOnResolverFailure": true
    }
  },
  "requiredOutputs": [
    "contrast-matrix",
    "shape-layout-audit",
    "brand-compliance-matrix",
    "runtime-check-matrix",
    "go-no-go-status"
  ]
}
