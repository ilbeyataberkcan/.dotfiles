<template id="project-bootstrap" version="2">
  <flow_contract>
    <tree_template_ref>~/.config/opencode/templates/design-flow-tree.template.xml</tree_template_ref>
    <state_template_ref>~/.config/opencode/templates/design-flow-state.template.xml</state_template_ref>
    <state_output_path>.opencode/design-flow-state.xml</state_output_path>
  </flow_contract>

  <project>
    <name>Example Project</name>
    <kind>existing</kind>
    <description>A clear one-sentence product description.</description>
    <target_users>
      <user>operations-team</user>
      <user>security-reviewers</user>
    </target_users>
    <success_criteria>
      <item>Users can complete primary workflow in under 2 minutes.</item>
      <item>Accessibility checks pass before launch.</item>
    </success_criteria>
  </project>

  <technical_baseline>
    <framework>nextjs</framework>
    <runtime>node</runtime>
    <package_manager>bun</package_manager>
    <deployment_target>vercel</deployment_target>
    <repository_visibility>private</repository_visibility>
  </technical_baseline>

  <naming>
    <repo_options>
      <option name="example-project">Direct and searchable naming.</option>
      <option name="example-console">Signals app-like operational interface.</option>
    </repo_options>
    <package_options>
      <option name="@example/project-web" npm_safe="true">Clear scope and package purpose.</option>
    </package_options>
  </naming>

  <assets>
    <local_paths>
      <path>./brand</path>
      <path>./docs/brand-guidelines.pdf</path>
    </local_paths>
    <urls>
      <url authority="inspiration">https://example.com/brand</url>
    </urls>
    <logo_status>missing</logo_status>
    <has_token_files>false</has_token_files>
  </assets>

  <policies>
    <web_search enabled="false" consent_scope="request" />
    <accessibility_target>wcag-aa</accessibility_target>
    <apca_advisory>true</apca_advisory>
  </policies>

  <business_dna>
    <mission></mission>
    <audience>
      <segment></segment>
    </audience>
    <value_model></value_model>
    <business_constraints>
      <constraint></constraint>
    </business_constraints>
    <proof_strategy></proof_strategy>
  </business_dna>

  <decision_ledger>
    <decision id="decision-mission" impact="high" status="needs_clarification">
      <topic>mission</topic>
      <source></source>
      <notes></notes>
    </decision>
  </decision_ledger>

  <approvals>
    <business_dna_approved>false</business_dna_approved>
    <design_direction_approved>false</design_direction_approved>
    <guideline_synthesis_approved>false</guideline_synthesis_approved>
  </approvals>
</template>
