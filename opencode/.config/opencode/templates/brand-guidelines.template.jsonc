{
  // Copy this file into a project-local config folder and tailor values.
  "brand": {
    "name": "Example Brand",
    "tagline": "Calm tools for high-stakes teams",
    "personality": ["trusted", "precise", "clear"],
    "forbiddenTraits": ["playful-chaos", "alarmist", "gimmicky"]
  },
  "voice": {
    "tone": "direct, calm, practical",
    "readingLevel": "plain-language",
    "claimsPolicy": "no overpromising"
  },
  "sourceAuthorityPolicy": {
    "canonicalDefinesConstraints": true,
    "inspirationSuggestsOnly": true,
    "wipCannotOverrideApprovedAnswers": true
  },
  "color": {
    "model": "oklch",
    "baseHueFamilies": [220, 30],
    "allowHighChroma": true,
    "criticalIntent": {
      "success": "clear-positive",
      "warning": "caution-not-panic",
      "error": "urgent-but-readable"
    },
    "forbiddenCombinations": [
      "status-only-color-without-label",
      "low-contrast-body-text",
      "multiple-primary-cta-colors-on-one-view"
    ]
  },
  "shapeLanguage": {
    "dominantFamily": "rounded-rect",
    "accentFamily": "directional-angle",
    "cornerRadiusPolicy": {
      "base": "0.75rem",
      "small": "0.25rem",
      "large": "1rem"
    },
    "forbiddenPatterns": [
      "mixed-random-corner-radii",
      "decorative-shapes-over-critical-content",
      "directional-shapes-pointing-away-from-primary-action"
    ]
  },
  "typography": {
    "headingRole": "confident",
    "bodyRole": "high-readability",
    "minBodySizePx": 16,
    "maxLineLengthCh": 75
  },
  "accessibility": {
    "contrastPolicy": {
      "wcag": "AA",
      "apca": "warn"
    },
    "requireNonColorIndicators": true,
    "keyboardFocusVisible": true
  }
}
